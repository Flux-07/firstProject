package pattern;

import java.util.Scanner;

public class Diamend {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		  Scanner sc=new Scanner(System.in);
	         System.out.println("Enter the number");
	         int number=sc.nextInt();
	         for(int row=1;row<2*number-1;row++) {
	        	 int totalSpace=row>number?row-number:number-row;
	        	 for(int space=1;space<=totalSpace;space++) {
	        		 System.out.print(" ");
	        	 }
	        	 int TotalColum=(row>number?2*number-row:row);
	        	 for(int col=1;col<=TotalColum;col++) {
	        		 System.out.print("*");
	        	 }
	        	 System.out.println();
	         }
	}

}
